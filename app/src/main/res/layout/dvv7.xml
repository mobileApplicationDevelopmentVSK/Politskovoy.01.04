<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextNumber9"
        android:layout_width="37dp"
        android:layout_height="42dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="256dp"
        android:background="@drawable/input"
        android:ems="10"
        android:inputType="number"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber10"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNumber11"
        android:layout_width="37dp"
        android:layout_height="41dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/input"
        android:ems="10"
        android:inputType="number"
        android:text="3"
        app:layout_constraintEnd_toStartOf="@+id/editTextNumber10"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNumber10"
        android:layout_width="37dp"
        android:layout_height="41dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/input"
        android:ems="10"
        android:inputType="number"
        android:text="6"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNumber12"
        android:layout_width="37dp"
        android:layout_height="40dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/input"
        android:ems="10"
        android:inputType="number"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/editTextNumber11"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="212dp"
        android:layout_height="57dp"
        android:layout_marginBottom="344dp"
        android:text="Отправить код повторно можно будет через 59 секунд"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:text="Введите код из E-mail"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="32dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="624dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/back" />
</androidx.constraintlayout.widget.ConstraintLayout>